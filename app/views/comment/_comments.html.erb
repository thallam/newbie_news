
<% @comments.each do |c| %>
  <div id="media">
    <div id="media-body">
      <%= c.body %>
      <br>
      <small>
        submitted <%= time_ago_in_words(c.created_at) %> ago by <%= c.user.name %>
      </small>
    </div>
  </div>

  <% if policy(c).destroy? %>
    <%= link_to "Delete", [@topic, @post, c], method: :delete %>
  <% end %>

<% end %>
