

<%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
<div id="media">
  <div id="media-body">
    <%= comment.body %>
    <br>
    <small>
      submitted <%= time_ago_in_words(comment.created_at) %> ago by <%= comment.user.name %>
    </small>
  </div>
</div>

<% if policy(comment).destroy? %>
<%= link_to "Delete", [ comment.post, comment], method: :delete %>
<% end %>

<% end %>
