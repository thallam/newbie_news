<h1><%= @topic.name %></h1>

<% if policy(@topic).update? %>
<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-warning' %>
<% end %>

<div class="row">
  <div class="col-md-6">
    <p class="lead"><%= @topic.description %></p>
    <% @posts.each do |post| %>
      <%= render @posts %>
    <% end %>
  </div>
  <div class="col-md-4">
    <% if policy(Post.new).create? %>
    <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
    <% end %>
       <br>
    <% if policy(@topic).destroy? %>
    <%= link_to "Destroy Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?'} %>

    <% end %>
  </div>
</div>
